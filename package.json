{
  "name": "sprintsolve",
  "version": "1.0.0",
  "description": "SprintSolve is a professional, web-based educational trivia game that combines modern development practices with engaging gameplay mechanics.",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "analyze": "vite-bundle-analyzer dist",
    "lighthouse": "lighthouse http://localhost:4173 --output html --output-path ./lighthouse-report.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/APorkolab/SprintSolve.git"
  },
  "keywords": [
    "typescript",
    "game",
    "trivia",
    "education",
    "canvas",
    "vite",
    "progressive-web-app",
    "accessibility",
    "responsive"
  ],
  "author": "Adam Porkolab <email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/APorkolab/SprintSolve/issues"
  },
  "homepage": "https://github.com/APorkolab/SprintSolve#readme",
  "dependencies": {
    "zustand": "^4.4.7",
    "canvas-confetti": "^1.9.2",
    "howler": "^2.2.4",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/canvas-confetti": "^1.6.4",
    "@types/howler": "^2.2.11",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-accessibility": "^0.2.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "happy-dom": "^12.10.3",
    "husky": "^8.0.3",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.0.4",
    "workbox-window": "^7.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
